<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:id="@+id/PilihJam"
        android:padding="15dp"
        android:text="Pilih Jam"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/Gambar"
        android:background="@drawable/kotak"
        android:src="@drawable/img_jam"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/Durasi"
        android:padding="15dp"
        android:text="Durasi"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_marginBottom="20dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/Btn60"
            android:text="60 Menit"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:layout_marginStart="50dp"
            android:backgroundTint="@color/biru2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/Btn90"
            android:text="60 Menit"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textAlignment="center"
            android:layout_marginStart="20dp"
            android:backgroundTint="@color/biru"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginStart="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/Btn120"
            android:text="120 Menit"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:backgroundTint="@color/biru"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/Btn150"
            android:text="120 Menit"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_marginStart="20dp"
            android:backgroundTint="@color/biru"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <Button
        android:id="@+id/BtnSVJam"
        android:layout_margin="20dp"
        android:backgroundTint="@color/biru2"
        android:text="Simpan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>